<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javad_mozaffari.grammar" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.RetrofitTopLearn"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".InfoPage"
            android:exported="true" />
        <activity
            android:name=".Room_Activities.RoomActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".Room_Activities.EnterActivity"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".VideoList"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".VideoPlay"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".HomePage"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AudioPlay"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
        <activity
            android:name=".AudioList"
            android:exported="true"
            android:screenOrientation="sensorPortrait" />
    </application>

</manifest>